{
  "name": "eltahan-desktop",
  "version": "1.0.0",
  "description": "ElTahan Photography Studio - نظام إدارة استوديو التصوير المتكامل",
  "author": "AbdElrhman Rabea <abdorabea472@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-exe": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis",
    "build-all": "electron-builder --win portable nsis"
  },
  "build": {
    "appId": "com.eltahan.studio",
    "productName": "ElTahan Studio",
    "copyright": "© 2026 AbdElrhman Rabea - ElTahan Photography Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../dist",
        "to": "app/dist"
      },
      {
        "from": "../whatsapp-server",
        "to": "app/whatsapp-server"
      },
      {
        "from": "../public",
        "to": "app/public"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "../public/icon.ico"
    },
    "portable": {
      "artifactName": "ElTahan-${arch}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ElTahan Studio",
      "artifactName": "ElTahan-Setup-${arch}.exe",
      "uninstallDisplayName": "ElTahan Studio",
      "license": "license.txt",
      "installerHeader": "installer-header.png",
      "installerSidebar": "installer-sidebar.png",
      "runAfterFinish": true,
      "menuCategory": "ElTahan Studio"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
