# متغيرات البيئة - Environment Variables

# ============================================
# JWT Configuration (مفتاح التشفير)
# ============================================
JWT_SECRET=your-secret-key-here-change-in-production

# ============================================
# Database Configuration (قاعدة البيانات)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=studio

# ============================================
# Server Configuration (إعدادات السيرفر)
# ============================================
BACKEND_PORT=3000
FRONTEND_PORT=8080

# ============================================
# CORS Configuration (السماح للطلبات)
# ============================================
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:5174,http://192.168.1.11:8080

# ============================================
# API Configuration (إعدادات API)
# ============================================
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# ============================================
# WhatsApp Configuration (إعدادات واتس اب)
# ============================================
WHATSAPP_ENABLED=true

# ============================================
# File Upload Configuration (رفع الملفات)
# ============================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# ============================================
# Node Environment (بيئة التطوير/الإنتاج)
# ============================================
NODE_ENV=development

# ============================================
# Logging Configuration (السجلات)
# ============================================
LOG_LEVEL=debug
LOG_FILE=./logs.txt

# ============================================
# Developer Mode (وضع المطور)
# ============================================
DEBUG=true
